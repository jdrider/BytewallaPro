<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2" >

        <TableRow>

            <ImageView
                android:id="@+id/DTNApps_DTNSendImageView"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/dtnSend" 
                android:src="@drawable/dtnsend" />

            <TextView
                android:id="@+id/DTNApps_DTNSendTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                android:text="@string/dtnSend"
                android:textSize="20sp" />

            <Button
                android:id="@+id/DTNApps_DTNSendOpenButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="@string/open" >
            </Button>
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/DTNApps_DTNReciveImageView"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dtnreceive" 
                android:contentDescription="@string/dtnReceive"/>

            <TextView
                android:id="@+id/DTNApps_DTNReciveTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                android:text="@string/dtnReceive"
                android:textSize="20sp" />

            <Button
                android:id="@+id/DTNApps_DTNReceiveOpenButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="@string/open" >
            </Button>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/DTNApps_CloseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/close" />

</LinearLayout>